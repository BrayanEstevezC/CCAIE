<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CCAII</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nosotros.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/content.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CCAIE.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alata&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Londrina+Outline&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cabin:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">

</head>
<body>
    <header class="container-fluid p-0">

        <nav class="navbar navbar-expand-lg bg-body-tertiary navbar-dark " id="nav">
            <div class="container-fluid p-0">
                <a class="navbar-brand px-3" href="#"><img src="~/images/LogoNav.png" class="logo" alt="Logo" /></a>
                <button class="navbar-toggler mx-3 d-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" id="icon">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse mt-2 text-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="#">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Oferta educativa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Postulaciones</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <main role="main" class="container-fluid m p-0">
        @RenderBody()
    </main>

    <footer class="container-fluid p-0 mt-3">
        <section class="row justify-content-center m">

            <div class="col-12 col-lg-2 p-0 justify-content-center d-flex">
                <img src="~/images/CCAIE.png" class="logoFooter " alt="LogoFooter" />
            </div>

            <div class="col-12 col-lg-6  p-0 d-flex flex-column justify-content-end">

                <div class="row text-center w-100 m">
                    <h6><img src="~/images/Location.svg" alt="Location" class="location" />Calle Hélice N°.304, Carlos Riburosa, Pachuca,HGO. CP: 42082 </h6>
                </div>
                
                <div class="row w-100 m text-center">
                    <h6><b> CENTRO DE CAPACITACIÓN AÉREA INFORMATICA E INGLES</b></h6>
                    <h6><b>JORGE ESTEVEZ PEÑA</b></h6>
                </div>

                <div class="row w-100 m text-center">
                    <h6><b>&copy 2024 CCAII</b></h6>
                </div>

            </div>

            <div class="col-12 col-lg-2 p-0 justify-content-center d-flex">
              
                <div class="row w-100 text-center ">

                    <h5>Contactanos al:</h5>
                        <a href="7712291888" id="footerLink"> <h5><img src="~/images/phone-solid.svg" class="phone pe-2" />Tel: 7712291888</h5></a>
                        <a href="7712291888" id="footerLink"> <h5><img src="~/images/phone-solid.svg" class="phone pe-2" />Tel: 7712291888</h5></a>

                </div>

            </div>

        </section>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
