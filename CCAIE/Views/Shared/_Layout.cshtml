            crossorigin="anonymous"></script>

</head>
<body>
    <header class="container-fluid p-0">

        <nav class="navbar navbar-expand-lg bg-body-tertiary navbar-dark " id="nav">
            <div class="container-fluid p-0">
                <a class="navbar-brand px-3" href="#"><img src="~/images/LogoNav.png" class="logo" alt="Logo" /></a>
                <button class="navbar-toggler mx-3 d-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" id="icon">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse mt-2 text-center" id="navbarNav">
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-action="Index" asp-controller="Home">Inicio</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-action="Docente" asp-controller="Home">Oferta de trabajo</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-action="History" asp-controller="Home">¿Quiénes Somos?</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <main role="main" class="container-fluid m p-0 w-100" id="content-main">
        @RenderBody()
    </main>

    <footer class="container-fluid p-0 mt-3">
        <section class="row justify-content-center m">

            <div class="col-12 col-lg-2 p-0 justify-content-center d-flex">
                <img src="~/images/CCAIE.png" class="logoFooter " alt="LogoFooter" />
            </div>

            <div class="col-12 col-lg-6  p-0 d-flex flex-column justify-content-end">

                <div class="row text-center w-100 m">
                    <h6><img src="~/images/Location.svg" alt="Location" class="location" />Calle Hélice N°.304, Carlos Rovirosa, Pachuca,HGO. CP: 42082 </h6>
                    <br />
                    <h6><img src="~/images/envelope-regular.svg" alt="Email" class="location" /><a id="footerLink" href="mailto:escuelaaereajep@gmail.com">escuelaaereajep@gmail.com</a></h6>
                </div>

                <div class="row w-100 m text-center">
                    <h6><b>CENTRO DE CAPACITACIÓN AÉREA INFORMÁTICA E INGLÉS</b></h6>
                    <h6><b>JORGE ESTÉVEZ PEÑA</b></h6>
                </div>

                <div class="row w-100 m text-center">
                    <h6><b>&copy 2024 CCAII</b></h6>
                </div>

            </div>

            <div class="col-12 col-lg-2 p-0 justify-content-center d-flex">

                <div class="row w-100 text-center ">

                    <h5>Contactanos al:</h5>
                    <a href="7712291888" id="footerLink"> <h5><img src="~/images/phone-solid.svg" class="phone pe-2" />Tel: 7712291888</h5></a>
                    <a href="7712291888" id="footerLink"> <h5><img src="~/images/phone-solid.svg" class="phone pe-2" />Tel: 7712291888</h5></a>

                </div>

            </div>

        </section>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
